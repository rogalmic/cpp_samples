{
    // https://code.visualstudio.com/docs/languages/cpp
    "version": "0.2.0",
    "configurations": [
        {
            "name": "gdb-win",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/win/output/bin/gnu_cpp_tutorial.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build win"
        },
        {
            "name": "gdb-unix",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/unix/output/bin/gnu_cpp_tutorial",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true, 
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build unix"
        },
        {
            "name": "gdb-unix (wsl)",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/c/Users/rogalmic/Documents/src/cpp/unix/output/bin/gnu_cpp_tutorial",
            "args": [],
            "stopAtEntry": false,
            "cwd": "/mnt/c/Users/rogalmic/Documents/src/cpp/unix",
            "environment": [],
            "externalConsole": false, // NOT SUPPORTED for WSL
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "c:/windows/sysnative/bash.exe",
                "pipeArgs": ["-c"],
                "debuggerPath": "/usr/bin/gdb"
            },
            "preLaunchTask": "build wsl unix"
            ,
            "sourceFileMap": {
                "/mnt/c": "c:/"
            }
        }
    ]
}